PUT _scripts/weekly_blogs1
{
  "script": {
    "lang": "mustache",
    "source": {
      "query": {
        "bool": {
          "filter": [
            {
              "range": {
                "publish_date": {
                  "gte": "{{start_date}}",
                  "lt": "{{start_date}}||+1w"
                }
              }
            }
          ]
        }
      }
    }
  }
}

GET blogs_fixed4/_search/template
{
  "id": "weekly_blogs1",
  "params": {
    "start_date": "2021-04-01"
  }
}

PUT _scripts/top_blogs
{
  "script": {
    "lang": "mustache",
    "source": {
      "query": {
        "bool": {
          "filter": [
            {
              "range": {
                "publish_date": {
                  "gte": "{{start_date}}",
                  "lt": "{{end_date}}{{^end_date}}{{start_date}}||+1w{{/end_date}}"
                }
              }
            }
          ]
        }
      }
    }
  }
}
