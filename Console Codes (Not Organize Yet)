POST blogs_fixed2/_async_search
{
  "query": {
    "function_score": {
      "query": {
        "match": {
          "content": "to the blog and your query: you are both enjoying being on Elasticsearch "
        }
      },
      "script_score": {
        "script": """
        int m = 30; 
        double u = 1.0;
        for (int x = 0; x < m; ++x) 
          for (int y = 0; y < 10000; ++y) 
            u=Math.log(y);
        return u
        """
      }
    }
  }
}

