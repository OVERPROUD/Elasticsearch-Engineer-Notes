GET blogs_fixed4/_search
{
  "_source": "authors", 
  "query": {
    "bool": {
      "filter": [
        {
          "script": {
            "script": """
            def authors = doc["authors.last_name"];
            for (int i = 0; i < authors.size(); i++) {
              if (authors.get(i).startsWith("A")) {
                return true;
              }
            }
            return false
            """
          }
        }
      ]
    }
  }
}

