            "type": "keyword"
          },
          "uid": {
            "enabled": false
          }
        }
      },
      "category": {
        "type": "keyword"
      },
      "content": {
        "type": "text"
      },
      "locale": {
        "type": "keyword"
      },
      "publish_date": {
        "type": "date",
        "format": "iso8601"
      },
      "search_tags": {
        "type": "keyword",
        "doc_values": false
      },
      "tags": {
        "properties": {
          "elastic_stack": {
            "type": "keyword",
            "copy_to": "search_tags"
          },
          "industry": {
            "type": "keyword",
            "copy_to": "search_tags"
          },
          "level": {
            "type": "keyword",
            "copy_to": "search_tags"
          },
          "product": {
            "type": "keyword",
            "copy_to": "search_tags"
          },
          "tags": {
            "type": "keyword",
            "copy_to": "search_tags"
          },
          "topic": {
            "type": "keyword",
